<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="Base.Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="thin.black" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="thin.black.large" parent="thin.black">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="thin.black.small" parent="thin.black">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="thin.black.small.button" parent="thin.black.small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
     <style name="thin.white" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="thin.white.large" parent="thin.white">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="thin.white.small" parent="thin.white">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="thin.white.small.button" parent="thin.white.small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>